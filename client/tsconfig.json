{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.tsx"
, "src/index.tsx", "src/App.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}